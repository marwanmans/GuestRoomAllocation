@page
@model GuestRoomAllocation.Web.Pages.Allocations.IndexModel
@{
    ViewData["Title"] = "Allocations";
    ViewData["Subtitle"] = "Manage guest room assignments and stays";
}

<style>
    :root {
        --primary: #2563eb;
        --primary-light: #3b82f6;
        --gray-50: #f9fafb;
        --gray-100: #f3f4f6;
        --gray-200: #e5e7eb;
        --gray-300: #d1d5db;
        --gray-400: #9ca3af;
        --gray-500: #6b7280;
        --gray-600: #4b5563;
        --gray-700: #374151;
        --gray-800: #1f2937;
        --gray-900: #111827;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --info: #0ea5e9;
    }

    /* Page Header */
    .page-header {
        margin-bottom: 32px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: var(--gray-900);
        margin-bottom: 4px;
    }

    .page-subtitle {
        color: var(--gray-500);
        font-size: 16px;
    }

    /* Summary Cards */
    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 32px;
    }

    .summary-card {
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 12px;
        padding: 24px;
        display: flex;
        align-items: center;
        gap: 16px;
        transition: all 0.15s ease;
    }

        .summary-card:hover {
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            transform: translateY(-1px);
        }

    .summary-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        color: white;
        flex-shrink: 0;
    }

        .summary-icon.success {
            background: var(--success);
        }

        .summary-icon.info {
            background: var(--info);
        }

        .summary-icon.warning {
            background: var(--warning);
        }

    .summary-content h3 {
        font-size: 24px;
        font-weight: 700;
        color: var(--gray-900);
        margin: 0 0 4px;
    }

    .summary-content .label {
        font-size: 14px;
        font-weight: 500;
        color: var(--gray-700);
        margin: 0 0 2px;
    }

    .summary-content .description {
        font-size: 13px;
        color: var(--gray-500);
        margin: 0;
    }

    /* Cards */
    .card-minimal {
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
        margin-bottom: 24px;
    }

    .card-header-minimal {
        padding: 20px 24px;
        background: var(--gray-50);
        border-bottom: 1px solid var(--gray-200);
    }

    .card-body-minimal {
        padding: 24px;
    }

    .card-title-minimal {
        font-size: 18px;
        font-weight: 600;
        color: var(--gray-900);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Filters */
    .filters-form {
        display: grid;
        grid-template-columns: 1fr 200px 150px 100px;
        gap: 16px;
        align-items: end;
    }

    .form-group {
        margin: 0;
    }

    .form-label {
        display: block;
        font-weight: 500;
        color: var(--gray-700);
        margin-bottom: 6px;
        font-size: 14px;
    }

    .form-input {
        width: 100%;
        padding: 10px 16px;
        border: 1px solid var(--gray-300);
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.15s ease;
        background: white;
    }

        .form-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgb(37 99 235 / 0.1);
        }

    .form-select {
        width: 100%;
        padding: 10px 16px;
        border: 1px solid var(--gray-300);
        border-radius: 8px;
        font-size: 14px;
        background: white;
        transition: all 0.15s ease;
    }

        .form-select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgb(37 99 235 / 0.1);
        }

    /* Buttons */
    .btn-minimal {
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 500;
        font-size: 14px;
        border: none;
        transition: all 0.15s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-primary-minimal {
        background: var(--primary);
        color: white;
    }

        .btn-primary-minimal:hover {
            background: var(--primary-light);
            color: white;
            transform: translateY(-1px);
        }

    .btn-secondary-minimal {
        background: white;
        color: var(--gray-600);
        border: 1px solid var(--gray-300);
    }

        .btn-secondary-minimal:hover {
            background: var(--gray-50);
            color: var(--gray-700);
            border-color: var(--gray-400);
            text-decoration: none;
        }

    .btn-ghost {
        background: transparent;
        color: var(--gray-500);
        border: none;
        padding: 6px 8px;
        border-radius: 6px;
        font-size: 12px;
    }

        .btn-ghost:hover {
            background: var(--gray-100);
            color: var(--gray-700);
        }

    /* Tables */
    .table-minimal {
        width: 100%;
        border-collapse: collapse;
    }

        .table-minimal th {
            background: var(--gray-50);
            padding: 16px 20px;
            text-align: left;
            font-weight: 600;
            font-size: 13px;
            color: var(--gray-700);
            border-bottom: 1px solid var(--gray-200);
            letter-spacing: 0.025em;
            text-transform: uppercase;
        }

        .table-minimal td {
            padding: 16px 20px;
            border-bottom: 1px solid var(--gray-100);
            vertical-align: middle;
        }

        .table-minimal tbody tr {
            transition: background-color 0.15s ease;
        }

            .table-minimal tbody tr:hover {
                background: var(--gray-50);
            }

    /* Status Badges */
    .badge-minimal {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 500;
        letter-spacing: 0.025em;
    }

    .badge-success {
        background: #dcfce7;
        color: #166534;
    }

    .badge-info {
        background: #dbeafe;
        color: #1e40af;
    }

    .badge-warning {
        background: #fef3c7;
        color: #92400e;
    }

    .badge-gray {
        background: var(--gray-100);
        color: var(--gray-600);
    }

    /* Guest Info */
    .guest-info {
        font-weight: 600;
        color: var(--gray-900);
        margin-bottom: 2px;
    }

    .guest-email {
        font-size: 13px;
        color: var(--gray-500);
    }

    /* Room Info */
    .room-info {
        font-weight: 500;
        color: var(--gray-800);
        margin-bottom: 2px;
    }

    .room-details {
        font-size: 13px;
        color: var(--gray-500);
    }

    /* Date Info */
    .date-range {
        font-weight: 500;
        color: var(--gray-800);
        margin-bottom: 2px;
    }

    .date-duration {
        font-size: 13px;
        color: var(--gray-500);
    }

    /* Actions */
    .action-buttons {
        display: flex;
        gap: 4px;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 40px;
    }

    .empty-icon {
        width: 56px;
        height: 56px;
        background: var(--gray-100);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }

    .empty-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--gray-900);
        margin-bottom: 8px;
    }

    .empty-description {
        color: var(--gray-500);
        margin-bottom: 24px;
        font-size: 14px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-title {
            font-size: 24px;
        }

        .summary-grid {
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .filters-form {
            grid-template-columns: 1fr;
            gap: 12px;
        }

        .table-minimal {
            font-size: 13px;
        }

            .table-minimal th,
            .table-minimal td {
                padding: 12px 16px;
            }
    }
</style>

<!-- Page Header -->
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Allocations</h1>
        <p class="page-subtitle">Manage guest room assignments and stays</p>
    </div>
    <a asp-page="Create" class="btn-minimal btn-primary-minimal">
        <i class="fas fa-plus"></i>
        New Allocation
    </a>
</div>

<!-- Summary Cards -->
<div class="summary-grid">
    <div class="summary-card">
        <div class="summary-icon success">
            <i class="fas fa-bed"></i>
        </div>
        <div class="summary-content">
            <h3>@Model.CurrentAllocations.Count</h3>
            <div class="label">Current Stays</div>
            <div class="description">Active now</div>
        </div>
    </div>
    <div class="summary-card">
        <div class="summary-icon info">
            <i class="fas fa-clock"></i>
        </div>
        <div class="summary-content">
            <h3>@Model.UpcomingAllocations.Count</h3>
            <div class="label">Upcoming</div>
            <div class="description">Future bookings</div>
        </div>
    </div>
    <div class="summary-card">
        <div class="summary-icon warning">
            <i class="fas fa-history"></i>
        </div>
        <div class="summary-content">
            <h3>@Model.RecentAllocations.Count</h3>
            <div class="label">Recent</div>
            <div class="description">Past/cancelled</div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card-minimal">
    <div class="card-body-minimal">
        <form method="get" class="filters-form">
            <div class="form-group">
                <label class="form-label">Search</label>
                <input asp-for="SearchTerm" class="form-input" placeholder="Guest name, email, room..." />
            </div>
            <div class="form-group">
                <label class="form-label">Apartment</label>
                <select asp-for="ApartmentFilter" class="form-select">
                    <option value="">All Apartments</option>
                    @foreach (var apartment in Model.Apartments)
                    {
                        <option value="@apartment.Id">@apartment.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Status</label>
                <select asp-for="StatusFilter" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="Current">Current</option>
                    <option value="Upcoming">Upcoming</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn-minimal btn-secondary-minimal">
                    <i class="fas fa-search"></i>
                    Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Current Allocations -->
@if (Model.CurrentAllocations.Any())
{
    <div class="card-minimal">
        <div class="card-header-minimal">
            <h2 class="card-title-minimal">
                <i class="fas fa-bed" style="color: var(--success);"></i>
                Current Stays (@Model.CurrentAllocations.Count)
            </h2>
        </div>
        <div class="card-body-minimal">
            <div style="overflow-x: auto;">
                <table class="table-minimal">
                    <thead>
                        <tr>
                            <th>Guest</th>
                            <th>Room</th>
                            <th>Dates</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var allocation in Model.CurrentAllocations)
                        {
                            <tr>
                                <td>
                                    <div class="guest-info">@allocation.Guest.FirstName @allocation.Guest.LastName</div>
                                    <div class="guest-email">@allocation.Guest.ContactInfo.Email</div>
                                </td>
                                <td>
                                    <div class="room-info">@allocation.Room.Apartment.Name</div>
                                    <div class="room-details">Room @allocation.Room.RoomNumber</div>
                                </td>
                                <td>
                                    <div class="date-range">@allocation.DateRange.StartDate.ToString("MMM dd") - @allocation.DateRange.EndDate.ToString("MMM dd")</div>
                                    <div class="date-duration">@allocation.DateRange.Duration day@(allocation.DateRange.Duration != 1 ? "s" : "")</div>
                                </td>
                                <td>
                                    <span class="badge-minimal badge-success">Current</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn-ghost" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn-ghost" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn-ghost" title="End Stay" style="color: var(--warning);">
                                            <i class="fas fa-sign-out-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Upcoming Allocations -->
@if (Model.UpcomingAllocations.Any())
{
    <div class="card-minimal">
        <div class="card-header-minimal">
            <h2 class="card-title-minimal">
                <i class="fas fa-clock" style="color: var(--info);"></i>
                Upcoming Stays (@Model.UpcomingAllocations.Count)
            </h2>
        </div>
        <div class="card-body-minimal">
            <div style="overflow-x: auto;">
                <table class="table-minimal">
                    <thead>
                        <tr>
                            <th>Guest</th>
                            <th>Room</th>
                            <th>Dates</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var allocation in Model.UpcomingAllocations)
                        {
                            <tr>
                                <td>
                                    <div class="guest-info">@allocation.Guest.FirstName @allocation.Guest.LastName</div>
                                    <div class="guest-email">@allocation.Guest.ContactInfo.Email</div>
                                </td>
                                <td>
                                    <div class="room-info">@allocation.Room.Apartment.Name</div>
                                    <div class="room-details">Room @allocation.Room.RoomNumber</div>
                                </td>
                                <td>
                                    <div class="date-range">@allocation.DateRange.StartDate.ToString("MMM dd") - @allocation.DateRange.EndDate.ToString("MMM dd")</div>
                                    <div class="date-duration">@allocation.DateRange.Duration day@(allocation.DateRange.Duration != 1 ? "s" : "")</div>
                                </td>
                                <td>
                                    <span class="badge-minimal badge-info">Upcoming</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn-ghost" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn-ghost" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn-ghost" title="Cancel" style="color: var(--danger);">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Empty State -->
@if (!Model.CurrentAllocations.Any() && !Model.UpcomingAllocations.Any() && !Model.RecentAllocations.Any())
{
    <div class="card-minimal">
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-calendar-alt" style="color: var(--gray-400); font-size: 20px;"></i>
            </div>
            <h3 class="empty-title">No allocations yet</h3>
            <p class="empty-description">Get started by creating your first guest room allocation.</p>
            <a asp-page="Create" class="btn-minimal btn-primary-minimal">
                <i class="fas fa-plus"></i>
                Create First Allocation
            </a>
        </div>
    </div>
}