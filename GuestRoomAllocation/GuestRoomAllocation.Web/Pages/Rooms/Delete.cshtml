@page "{id:int}"
@model DeleteRoomModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@{
    ViewData["Title"] = "Delete Room";
}

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5><i class="fas fa-exclamation-triangle"></i> Delete Room</h5>
            </div>
            <div class="card-body">
                <p class="lead">Are you sure you want to delete this room?</p>

                <div class="row">
                    <div class="col-md-6">
                        <h6>Room Information:</h6>
                        <ul class="list-unstyled">
                            <li><strong>Apartment:</strong> @Model.Room.Apartment.Name</li>
                            <li><strong>Room Number:</strong> @Model.Room.RoomNumber</li>
                            <li><strong>Size:</strong> @Model.Room.Size m²</li>
                            <li><strong>Max Occupancy:</strong> @Model.Room.MaxOccupancy</li>
                            <li><strong>Bathroom:</strong> @(Model.Room.HasPrivateBathroom ? "Private" : "Shared")</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Impact Assessment:</h6>
                        <ul class="list-unstyled">
                            <li><strong>Total Allocations:</strong> @Model.AllocationCount</li>
                            <li><strong>Current Allocations:</strong> @Model.CurrentAllocationCount</li>
                            <li><strong>Future Allocations:</strong> @Model.FutureAllocationCount</li>
                            <li><strong>Maintenance Periods:</strong> @Model.MaintenanceCount</li>
                        </ul>
                    </div>
                </div>

                @if (Model.CurrentAllocationCount > 0 || Model.FutureAllocationCount > 0)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> This room has active or future allocations.
                        Deleting this room will also remove all allocations and maintenance periods.
                    </div>
                }

                <form method="post" class="d-inline">
                    <input type="hidden" asp-for="Room.Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <a href="/Rooms" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you absolutely sure you want to delete this room and all its data?')">
                            <i class="fas fa-trash"></i> Delete Room
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        @if (Model.RecentAllocations.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h6><i class="fas fa-history"></i> Recent Allocations</h6>
                </div>
                <div class="card-body">
                    @foreach (var allocation in Model.RecentAllocations.Take(5))
                    {
                        <div class="mb-2 p-2 border rounded">
                            <strong>@allocation.Guest.FullName</strong>
                            <br>
                            <small class="text-muted">
                                @allocation.CheckInDate.ToString("MMM dd") -
                                @allocation.CheckOutDate.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>