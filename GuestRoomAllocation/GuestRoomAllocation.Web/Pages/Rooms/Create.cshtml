@page
@model GuestRoomAllocation.Web.Pages.Rooms.CreateModel
@{
    ViewData["Title"] = "Add New Room";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">
                    <i class="fas fa-plus me-2 text-success"></i>Add New Room
                </h1>
                <p class="text-muted">Create a new room in an apartment</p>
            </div>
            <div>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Rooms
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-door-open me-2 text-primary"></i>Room Information
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Apartment Selection -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-building me-2 text-secondary"></i>Location
                        </h6>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Command.ApartmentId" class="form-label">Select Apartment</label>
                                <select asp-for="Command.ApartmentId" asp-items="Model.ApartmentOptions" class="form-select">
                                    <option value="">-- Choose an apartment --</option>
                                </select>
                                <span asp-validation-for="Command.ApartmentId" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    The room will be added to the selected apartment
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Basic Room Information -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-door-open me-2 text-info"></i>Basic Information
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.RoomNumber" class="form-label">Room Number</label>
                                <input asp-for="Command.RoomNumber" class="form-control" placeholder="e.g., 101, A1, Master" />
                                <span asp-validation-for="Command.RoomNumber" class="text-danger"></span>
                                <div class="form-text">Must be unique within the apartment</div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.Size" class="form-label">Size (m²)</label>
                                <input asp-for="Command.Size" type="number" min="5" max="200" class="form-control" />
                                <span asp-validation-for="Command.Size" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Occupancy and Amenities -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-users me-2 text-warning"></i>Occupancy & Features
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.MaxOccupancy" class="form-label">Maximum Occupancy</label>
                                <input asp-for="Command.MaxOccupancy" type="number" min="1" max="6" class="form-control" />
                                <span asp-validation-for="Command.MaxOccupancy" class="text-danger"></span>
                                <div class="form-text">Number of guests this room can accommodate</div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mt-4">
                                    <input asp-for="Command.HasPrivateBathroom" class="form-check-input" type="checkbox" />
                                    <label asp-for="Command.HasPrivateBathroom" class="form-check-label">
                                        <i class="fas fa-bath me-1"></i>Has Private Bathroom
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Details -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-edit me-2 text-success"></i>Additional Details
                        </h6>
                        <div class="mb-3">
                            <label asp-for="Command.Description" class="form-label">Description (Optional)</label>
                            <textarea asp-for="Command.Description" class="form-control" rows="3" placeholder="Room features, furniture, special notes..."></textarea>
                            <span asp-validation-for="Command.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Create Room
                        </button>
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-lightbulb me-2 text-warning"></i>Room Guidelines
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Room Numbering:</strong>
                    <ul class="mt-1 mb-0">
                        <li>Use consistent numbering (101, 102, 103)</li>
                        <li>Or descriptive names (Master, Guest Room)</li>
                        <li>Must be unique within each apartment</li>
                    </ul>
                </div>
                <div>
                    <strong>Bathroom Types:</strong>
                    <ul class="mt-1 mb-0">
                        <li>Private: Dedicated to this room only</li>
                        <li>Shared: Used by multiple rooms/guests</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm mt-3">
            <div class="card-header bg-transparent border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-link me-2 text-info"></i>Quick Links
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-page="/Apartments/Index" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-building me-2"></i>View Apartments
                    </a>
                    <a asp-page="/Apartments/Create" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-plus me-2"></i>Add New Apartment
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>