@page
@model LogoutModel
@{
    ViewData["Title"] = "Logging Out";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="fas fa-sign-out-alt fa-3x text-muted"></i>
                        </div>
                        <h3 class="card-title mb-4">Logging Out</h3>
                        <p class="text-muted">You are being logged out of the Guest Room Allocation System...</p>

                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>

                        <div class="mt-4">
                            <p><small class="text-muted">If you are not redirected automatically, <a href="/Login">click here</a>.</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Auto-redirect after 2 seconds if not already redirected
        setTimeout(function() {
            window.location.href = '/Login';
        }, 2000);
    </script>
</body>
</html>