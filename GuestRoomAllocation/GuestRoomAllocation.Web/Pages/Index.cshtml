@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">Dashboard</h1>
                <p class="text-muted">Welcome to Guest Room Allocation System</p>
            </div>
            <div class="text-muted">
                <i class="fas fa-calendar-alt me-1"></i>
                @DateTime.Now.ToString("MMMM dd, yyyy")
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- Quick Stats Cards -->
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                            <i class="fas fa-users text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title mb-1">Total Guests</h6>
                        <h4 class="mb-0">@Model.TotalGuests</h4>
                        <small class="text-muted">Registered</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-3 p-3">
                            <i class="fas fa-door-open text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title mb-1">Available Rooms</h6>
                        <h4 class="mb-0">@Model.AvailableRooms</h4>
                        <small class="text-muted">Ready for booking</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                            <i class="fas fa-calendar-check text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title mb-1">Active Allocations</h6>
                        <h4 class="mb-0">@Model.ActiveAllocations</h4>
                        <small class="text-muted">Current stays</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-3 p-3">
                            <i class="fas fa-tools text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title mb-1">Maintenance</h6>
                        <h4 class="mb-0">@Model.PendingMaintenance</h4>
                        <small class="text-muted">Pending tasks</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Quick Actions -->
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-0 pb-0">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2 text-primary"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-page="/Guests/Create" class="btn btn-outline-primary">
                        <i class="fas fa-user-plus me-2"></i>Add New Guest
                    </a>
                    <a asp-page="/Apartments/Create" class="btn btn-outline-secondary">
                        <i class="fas fa-building me-2"></i>Add New Apartment
                    </a>
                    <a asp-page="/Rooms/Create" class="btn btn-outline-info">
                        <i class="fas fa-door-open me-2"></i>Add New Room
                    </a>
                    <a asp-page="/Allocations/Create" class="btn btn-outline-success">
                        <i class="fas fa-calendar-plus me-2"></i>Create Allocation
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- System Overview -->
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-0 pb-0">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie me-2 text-success"></i>System Overview
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-primary mb-1">@Model.TotalApartments</h4>
                            <small class="text-muted">Apartments</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-success mb-1">@(Model.AvailableRooms + Model.ActiveAllocations)</h4>
                        <small class="text-muted">Total Rooms</small>
                    </div>
                </div>
                <hr class="my-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">Occupancy Rate</span>
                    <span class="fw-bold">
                        @{
                            var totalRooms = Model.AvailableRooms + Model.ActiveAllocations;
                            var occupancyRate = totalRooms > 0 ? (Model.ActiveAllocations * 100 / totalRooms) : 0;
                        }
                        @occupancyRate%
                    </span>
                </div>
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: @occupancyRate%"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity / Quick Access -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h5 class="card-title mb-0">
                    <i class="fas fa-tachometer-alt me-2 text-primary"></i>Quick Access
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="text-center p-3">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fas fa-users text-primary fs-4"></i>
                            </div>
                            <h6>Manage Guests</h6>
                            <p class="text-muted small">Add, edit, and view guest information</p>
                            <a asp-page="/Guests/Index" class="btn btn-sm btn-outline-primary">View All Guests</a>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center p-3">
                            <div class="bg-secondary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fas fa-building text-secondary fs-4"></i>
                            </div>
                            <h6>Apartments</h6>
                            <p class="text-muted small">Manage apartment properties and details</p>
                            <a asp-page="/Apartments/Index" class="btn btn-sm btn-outline-secondary">View Apartments</a>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center p-3">
                            <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fas fa-door-open text-info fs-4"></i>
                            </div>
                            <h6>Room Management</h6>
                            <p class="text-muted small">Configure rooms and availability</p>
                            <a asp-page="/Rooms/Index" class="btn btn-sm btn-outline-info">View Rooms</a>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center p-3">
                            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fas fa-calendar-alt text-success fs-4"></i>
                            </div>
                            <h6>Allocations</h6>
                            <p class="text-muted small">Assign guests to rooms and manage stays</p>
                            <a asp-page="/Allocations/Index" class="btn btn-sm btn-outline-success">View Allocations</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>