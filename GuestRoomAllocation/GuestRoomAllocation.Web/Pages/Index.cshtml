@page
@model IndexModel
@{
    ViewData["Title"] = "Guest Room Allocation System";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <h1 class="card-title mb-4">Guest Room Allocation System</h1>
                        <p class="lead">Welcome to the Guest Room Allocation Management System</p>

                        <div class="row mt-4">
                            <div class="col-md-4">
                                <div class="card border-primary">
                                    <div class="card-body">
                                        <i class="fas fa-users fa-3x text-primary mb-3"></i>
                                        <h5>Guest Management</h5>
                                        <p>Manage guest information and profiles</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-success">
                                    <div class="card-body">
                                        <i class="fas fa-bed fa-3x text-success mb-3"></i>
                                        <h5>Room Management</h5>
                                        <p>Manage rooms and apartment facilities</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-info">
                                    <div class="card-body">
                                        <i class="fas fa-calendar-alt fa-3x text-info mb-3"></i>
                                        <h5>Allocations</h5>
                                        <p>Schedule and manage room allocations</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <a href="/Login" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Administrator Login
                            </a>
                        </div>

                        <div class="mt-3">
                            <small class="text-muted">
                                Default credentials: Username: <strong>admin</strong> | Password: <strong>Admin123!</strong>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>