@page "{id:int}"
@model EditApartmentModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@{
    ViewData["Title"] = "Edit Apartment";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Edit Apartment: @Model.Apartment.Name</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Apartment.Id" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Apartment.Name" class="form-label">Apartment Name *</label>
                                <input asp-for="Apartment.Name" class="form-control" required />
                                <span asp-validation-for="Apartment.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Apartment.OverallSpace" class="form-label">Overall Space (m²) *</label>
                                <input asp-for="Apartment.OverallSpace" type="number" class="form-control"
                                       required min="1" />
                                <span asp-validation-for="Apartment.OverallSpace" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apartment.Address" class="form-label">Address *</label>
                        <input asp-for="Apartment.Address" class="form-control" required />
                        <span asp-validation-for="Apartment.Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apartment.MapLocation" class="form-label">Map Location (Google Maps URL)</label>
                        <input asp-for="Apartment.MapLocation" type="url" class="form-control" />
                        <span asp-validation-for="Apartment.MapLocation" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Apartment.TotalBathrooms" class="form-label">Total Bathrooms *</label>
                                <input asp-for="Apartment.TotalBathrooms" type="number" class="form-control"
                                       required min="1" />
                                <span asp-validation-for="Apartment.TotalBathrooms" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check mt-4">
                                    <input asp-for="Apartment.HasLaundry" class="form-check-input" type="checkbox" />
                                    <label asp-for="Apartment.HasLaundry" class="form-check-label">
                                        Has Laundry Facilities
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apartment.CommonAreas" class="form-label">Common Areas</label>
                        <textarea asp-for="Apartment.CommonAreas" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Apartment.CommonAreas" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apartment.Facilities" class="form-label">Facilities</label>
                        <textarea asp-for="Apartment.Facilities" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Apartment.Facilities" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apartment.Amenities" class="form-label">Amenities</label>
                        <textarea asp-for="Apartment.Amenities" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Apartment.Amenities" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Admin/Apartments" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Apartments
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Apartment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">
                <h6><i class="fas fa-bed"></i> Rooms (@Model.Apartment.Rooms.Count)</h6>
            </div>
            <div class="card-body">
                @if (Model.Apartment.Rooms.Any())
                {
                    @foreach (var room in Model.Apartment.Rooms.OrderBy(r => r.RoomNumber))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>
                                <strong>@room.RoomNumber</strong>
                                @if (room.HasPrivateBathroom)
                                {
                                    <i class="fas fa-bath text-info"></i>
                                }
                                <br>
                                <small class="text-muted">@room.Size m²</small>
                            </span>
                            <a href="/Rooms/Edit/@room.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No rooms added yet</p>
                }

                <hr>
                <a href="/Rooms/Create?apartmentId=@Model.Apartment.Id" class="btn btn-success btn-sm">
                    <i class="fas fa-plus"></i> Add Room
                </a>
            </div>
        </div>

        @if (Model.CurrentAllocations.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h6><i class="fas fa-users"></i> Current Guests</h6>
                </div>
                <div class="card-body">
                    @foreach (var allocation in Model.CurrentAllocations)
                    {
                        <div class="mb-2 p-2 border rounded">
                            <strong>@allocation.Guest.FullName</strong>
                            <br>
                            <small class="text-muted">
                                Room @allocation.Room.RoomNumber
                                <br>Until @allocation.CheckOutDate.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}