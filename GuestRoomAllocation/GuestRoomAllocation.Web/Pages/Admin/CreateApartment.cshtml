@page
@model CreateApartmentModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@{
    ViewData["Title"] = "Add New Apartment";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Apartment Information</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Apartment.Name" class="form-label">Apartment Name *</label>
                                <input asp-for="Apartment.Name" class="form-control" required
                                       placeholder="e.g., Downtown Loft, Sunset Villa" />
                                <span asp-validation-for="Apartment.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Apartment.OverallSpace" class="form-label">Overall Space (m²) *</label>
                                <input asp-for="Apartment.OverallSpace" type="number" class="form-control"
                                       required min="1" />
                                <span asp-validation-for="Apartment.OverallSpace" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apartment.Address" class="form-label">Address *</label>
                        <input asp-for="Apartment.Address" class="form-control" required
                               placeholder="Full street address" />
                        <span asp-validation-for="Apartment.Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apartment.MapLocation" class="form-label">Map Location (Google Maps URL)</label>
                        <input asp-for="Apartment.MapLocation" type="url" class="form-control"
                               placeholder="Copy and paste Google Maps URL here" />
                        <small class="form-text text-muted">
                            Go to Google Maps, find the location, click Share, copy the link and paste it here.
                        </small>
                        <span asp-validation-for="Apartment.MapLocation" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Apartment.TotalBathrooms" class="form-label">Total Bathrooms *</label>
                                <input asp-for="Apartment.TotalBathrooms" type="number" class="form-control"
                                       required min="1" />
                                <span asp-validation-for="Apartment.TotalBathrooms" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check mt-4">
                                    <input asp-for="Apartment.HasLaundry" class="form-check-input" type="checkbox" />
                                    <label asp-for="Apartment.HasLaundry" class="form-check-label">
                                        Has Laundry Facilities
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apartment.CommonAreas" class="form-label">Common Areas</label>
                        <textarea asp-for="Apartment.CommonAreas" class="form-control" rows="2"
                                  placeholder="e.g., Living room, Kitchen, Dining area"></textarea>
                        <span asp-validation-for="Apartment.CommonAreas" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apartment.Facilities" class="form-label">Facilities</label>
                        <textarea asp-for="Apartment.Facilities" class="form-control" rows="2"
                                  placeholder="e.g., Parking, Gym, Pool, Security"></textarea>
                        <span asp-validation-for="Apartment.Facilities" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apartment.Amenities" class="form-label">Amenities</label>
                        <textarea asp-for="Apartment.Amenities" class="form-control" rows="2"
                                  placeholder="e.g., WiFi, Air conditioning, Heating, Furnished"></textarea>
                        <span asp-validation-for="Apartment.Amenities" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Admin/Apartments" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Apartments
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save Apartment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-info-circle"></i> Apartment Setup Guide</h6>
            </div>
            <div class="card-body">
                <p><strong>Step 1:</strong> Create the apartment with basic information</p>
                <p><strong>Step 2:</strong> Add rooms to the apartment</p>
                <p><strong>Step 3:</strong> Configure room details (bathroom, size, etc.)</p>

                <hr>

                <p><strong>Map Location Tips:</strong></p>
                <ol>
                    <li>Open Google Maps</li>
                    <li>Search for the address</li>
                    <li>Click the "Share" button</li>
                    <li>Copy the link</li>
                    <li>Paste it in the Map Location field</li>
                </ol>

                <hr>

                <p><strong>Bathroom Calculation:</strong></p>
                <p>Count all bathrooms (including private ones in rooms). This helps with allocation preferences.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}