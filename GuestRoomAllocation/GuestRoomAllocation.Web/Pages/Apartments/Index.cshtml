@page
@model GuestRoomAllocation.Web.Pages.Apartments.IndexModel
@{
    ViewData["Title"] = "Apartments";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">
                    <i class="fas fa-building me-2 text-secondary"></i>Apartments
                </h1>
                <p class="text-muted">Manage apartment properties and details</p>
            </div>
            <div>
                <a asp-page="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Apartment
                </a>
            </div>
        </div>
    </div>
</div>

@if (Model.Apartments.Any())
{
    <div class="row g-4">
        @foreach (var apartment in Model.Apartments)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent border-0 pb-0">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title mb-0">@apartment.Name</h5>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-eye me-2"></i>View Details</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-edit me-2"></i>Edit</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-trash me-2"></i>Delete</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted d-block">
                                <i class="fas fa-map-marker-alt me-1"></i>Address
                            </small>
                            <span class="small">
                                @apartment.Address.Street<br>
                                @apartment.Address.City, @apartment.Address.State @apartment.Address.ZipCode<br>
                                @apartment.Address.Country
                            </span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-6">
                                <div class="text-center p-2 bg-light rounded">
                                    <div class="fw-bold text-primary">@apartment.Rooms.Count</div>
                                    <small class="text-muted">Rooms</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center p-2 bg-light rounded">
                                    <div class="fw-bold text-info">@apartment.TotalBathrooms</div>
                                    <small class="text-muted">Bathrooms</small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex align-items-center gap-3">
                                @if (apartment.HasLaundry)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Laundry
                                    </span>
                                }
                                <span class="badge bg-primary">
                                    @apartment.OverallSpace sqft
                                </span>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(apartment.CommonAreas))
                        {
                            <div class="mb-2">
                                <small class="text-muted d-block">Common Areas</small>
                                <span class="small">@apartment.CommonAreas</span>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0">
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="fas fa-door-open me-1"></i>View Rooms
                            </a>
                            <a href="#" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-building text-muted" style="font-size: 4rem;"></i>
        </div>
        <h4 class="text-muted mb-3">No Apartments Found</h4>
        <p class="text-muted mb-4">Get started by adding your first apartment to the system.</p>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add First Apartment
        </a>
    </div>
}