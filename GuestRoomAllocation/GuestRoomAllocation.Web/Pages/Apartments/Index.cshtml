@page
@model GuestRoomAllocation.Web.Pages.Apartments.IndexModel
@{
    ViewData["Title"] = "Apartments";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">
                    <i class="fas fa-building me-2 text-primary"></i>Apartment Management
                </h1>
                <p class="text-muted">Manage apartment properties and details</p>
            </div>
            <div>
                <a asp-page="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Apartment
                </a>
            </div>
        </div>
    </div>
</div>

@if (Model.Apartments.Any())
{
    <div class="row g-3">
        @foreach (var apartment in Model.Apartments)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@apartment.Name</h5>
                        <p class="text-muted small">
                            @apartment.Address.Street<br>
                            @apartment.Address.City, @apartment.Address.State
                        </p>
                        <div class="d-flex gap-2">
                            <span class="badge bg-info">@apartment.TotalBathrooms Bathrooms</span>
                            <span class="badge bg-secondary">@apartment.OverallSpace sq ft</span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <small class="text-muted">Created @apartment.CreatedDate.ToString("MMM dd, yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-building text-muted" style="font-size: 4rem;"></i>
        </div>
        <h4 class="text-muted mb-3">No Apartments Found</h4>
        <p class="text-muted mb-4">Get started by adding your first apartment to the system.</p>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add First Apartment
        </a>
    </div>
}