@page
@model GuestRoomAllocation.Web.Pages.Apartments.CreateModel
@{
    ViewData["Title"] = "Add New Apartment";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">
                    <i class="fas fa-plus me-2 text-success"></i>Add New Apartment
                </h1>
                <p class="text-muted">Create a new apartment property</p>
            </div>
            <div>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-building me-2 text-primary"></i>Apartment Information
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Basic Information -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-info-circle me-2 text-primary"></i>Basic Information
                        </h6>
                        <div class="mb-3">
                            <label asp-for="Command.Name" class="form-label">Apartment Name</label>
                            <input asp-for="Command.Name" class="form-control" placeholder="e.g., Downtown Loft, Garden View Apartment" />
                            <span asp-validation-for="Command.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Address Information (Updated - No State/ZipCode) -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-map-marker-alt me-2 text-danger"></i>Address Information
                        </h6>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Command.Street" class="form-label">Street Address</label>
                                <input asp-for="Command.Street" class="form-control" placeholder="123 Main Street, Apt 4B" />
                                <span asp-validation-for="Command.Street" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.City" class="form-label">City</label>
                                <input asp-for="Command.City" class="form-control" placeholder="Cairo" />
                                <span asp-validation-for="Command.City" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.Country" class="form-label">Country</label>
                                <input asp-for="Command.Country" class="form-control" placeholder="Egypt" value="Egypt" />
                                <span asp-validation-for="Command.Country" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Command.MapLocation" class="form-label">Map Location (Optional)</label>
                                <input asp-for="Command.MapLocation" class="form-control" placeholder="Google Maps URL or coordinates" />
                                <span asp-validation-for="Command.MapLocation" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Property Details (Updated to Metric) -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-home me-2 text-info"></i>Property Details
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.TotalBathrooms" class="form-label">Total Bathrooms</label>
                                <input asp-for="Command.TotalBathrooms" type="number" min="1" max="50" class="form-control" />
                                <span asp-validation-for="Command.TotalBathrooms" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.OverallSpace" class="form-label">Overall Space (m²)</label>
                                <input asp-for="Command.OverallSpace" type="number" min="20" max="1000" class="form-control" />
                                <span asp-validation-for="Command.OverallSpace" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Features -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-star me-2 text-warning"></i>Features & Amenities
                        </h6>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Command.CommonAreas" class="form-label">Common Areas</label>
                                <textarea asp-for="Command.CommonAreas" class="form-control" rows="3" placeholder="Living room, kitchen, dining area..."></textarea>
                                <span asp-validation-for="Command.CommonAreas" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.Facilities" class="form-label">Facilities</label>
                                <textarea asp-for="Command.Facilities" class="form-control" rows="3" placeholder="Parking, elevator, security..."></textarea>
                                <span asp-validation-for="Command.Facilities" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.Amenities" class="form-label">Amenities</label>
                                <textarea asp-for="Command.Amenities" class="form-control" rows="3" placeholder="WiFi, AC, heating..."></textarea>
                                <span asp-validation-for="Command.Amenities" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input asp-for="Command.HasLaundry" class="form-check-input" type="checkbox" />
                                    <label asp-for="Command.HasLaundry" class="form-check-label">
                                        <i class="fas fa-tshirt me-1"></i>Has Laundry Facilities
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Create Apartment
                        </button>
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-lightbulb me-2 text-warning"></i>Tips
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Apartment Naming:</strong>
                    <ul class="mt-1 mb-0">
                        <li>Use descriptive names</li>
                        <li>Include location or key features</li>
                        <li>Keep it concise but clear</li>
                    </ul>
                </div>
                <div>
                    <strong>Space Measurement:</strong>
                    <ul class="mt-1 mb-0">
                        <li>Measure total usable area</li>
                        <li>Include all rooms and common areas</li>
                        <li>Round to nearest square meter</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm mt-3">
            <div class="card-header bg-transparent border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-link me-2 text-info"></i>Quick Links
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-page="/Rooms/Create" class="btn btn-sm btn-outline-success">
                        <i class="fas fa-door-open me-2"></i>Add Rooms Later
                    </a>
                    <a asp-page="Index" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-list me-2"></i>View All Apartments
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>