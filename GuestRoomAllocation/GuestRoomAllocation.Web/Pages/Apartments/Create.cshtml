@page
@model GuestRoomAllocation.Web.Pages.Apartments.CreateModel
@{
    ViewData["Title"] = "Create Apartment";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">
                    <i class="fas fa-building me-2 text-secondary"></i>Create New Apartment
                </h1>
                <p class="text-muted">Add a new apartment property to the system</p>
            </div>
            <div>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Apartments
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Apartment Details
                </h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Basic Information -->
                    <div class="row g-3 mb-4">
                        <div class="col-12">
                            <label asp-for="Command.Name" class="form-label fw-bold">Apartment Name</label>
                            <input asp-for="Command.Name" class="form-control" placeholder="e.g., Downtown Loft, Riverside Apartment" />
                            <span asp-validation-for="Command.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Address Information -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-map-marker-alt me-2 text-danger"></i>Address Information
                        </h6>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Command.Street" class="form-label">Street Address</label>
                                <input asp-for="Command.Street" class="form-control" placeholder="123 Main Street, Apt 4B" />
                                <span asp-validation-for="Command.Street" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.City" class="form-label">City</label>
                                <input asp-for="Command.City" class="form-control" placeholder="New York" />
                                <span asp-validation-for="Command.City" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Command.State" class="form-label">State</label>
                                <input asp-for="Command.State" class="form-control" placeholder="NY" />
                                <span asp-validation-for="Command.State" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Command.ZipCode" class="form-label">Zip Code</label>
                                <input asp-for="Command.ZipCode" class="form-control" placeholder="10001" />
                                <span asp-validation-for="Command.ZipCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.Country" class="form-label">Country</label>
                                <input asp-for="Command.Country" class="form-control" placeholder="United States" value="United States" />
                                <span asp-validation-for="Command.Country" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.MapLocation" class="form-label">Map Location (Optional)</label>
                                <input asp-for="Command.MapLocation" class="form-control" placeholder="Google Maps URL or coordinates" />
                                <span asp-validation-for="Command.MapLocation" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Property Details -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-home me-2 text-info"></i>Property Details
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Command.TotalBathrooms" class="form-label">Total Bathrooms</label>
                                <input asp-for="Command.TotalBathrooms" type="number" min="1" max="50" class="form-control" />
                                <span asp-validation-for="Command.TotalBathrooms" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.OverallSpace" class="form-label">Overall Space (sq ft)</label>
                                <input asp-for="Command.OverallSpace" type="number" min="100" max="10000" class="form-control" />
                                <span asp-validation-for="Command.OverallSpace" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <div class="form-check">
                                    <input asp-for="Command.HasLaundry" class="form-check-input" type="checkbox" />
                                    <label asp-for="Command.HasLaundry" class="form-check-label">
                                        Has Laundry Facilities
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Information -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-plus-circle me-2 text-success"></i>Additional Information
                        </h6>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Command.CommonAreas" class="form-label">Common Areas</label>
                                <textarea asp-for="Command.CommonAreas" class="form-control" rows="2"
                                          placeholder="e.g., Living room, Kitchen, Dining area"></textarea>
                                <span asp-validation-for="Command.CommonAreas" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.Facilities" class="form-label">Facilities</label>
                                <textarea asp-for="Command.Facilities" class="form-control" rows="3"
                                          placeholder="e.g., Gym, Pool, Parking"></textarea>
                                <span asp-validation-for="Command.Facilities" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.Amenities" class="form-label">Amenities</label>
                                <textarea asp-for="Command.Amenities" class="form-control" rows="3"
                                          placeholder="e.g., WiFi, Air Conditioning, Heating"></textarea>
                                <span asp-validation-for="Command.Amenities" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Buttons -->
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Create Apartment
                        </button>
                        <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-lightbulb me-2 text-warning"></i>Tips
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <small>
                        <strong>Pro Tip:</strong> After creating the apartment, you can add individual rooms to it from the Rooms section.
                    </small>
                </div>
                <ul class="list-unstyled small text-muted">
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Use descriptive names for easy identification</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Include complete address information</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Add map location for easier navigation</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>List all common areas and amenities</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}