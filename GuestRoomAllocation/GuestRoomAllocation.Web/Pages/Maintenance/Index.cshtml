@page
@model GuestRoomAllocation.Web.Pages.Maintenance.IndexModel
@{
    ViewData["Title"] = "Maintenance";
    ViewData["Subtitle"] = "Schedule and track maintenance activities";
}

<!-- Include FullCalendar CSS -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet" />

<style>
    :root {
        --primary: #2563eb;
        --primary-light: #3b82f6;
        --gray-50: #f9fafb;
        --gray-100: #f3f4f6;
        --gray-200: #e5e7eb;
        --gray-300: #d1d5db;
        --gray-400: #9ca3af;
        --gray-500: #6b7280;
        --gray-600: #4b5563;
        --gray-700: #374151;
        --gray-800: #1f2937;
        --gray-900: #111827;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --info: #0ea5e9;
        --purple: #8b5cf6;
    }

    /* Page Header */
    .page-header {
        margin-bottom: 32px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: var(--gray-900);
        margin-bottom: 4px;
    }

    .page-subtitle {
        color: var(--gray-500);
        font-size: 16px;
    }

    /* Summary Cards */
    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 32px;
    }

    .summary-card {
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 12px;
        padding: 24px;
        display: flex;
        align-items: center;
        gap: 16px;
        transition: all 0.15s ease;
    }

        .summary-card:hover {
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            transform: translateY(-1px);
        }

    .summary-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        color: white;
        flex-shrink: 0;
    }

        .summary-icon.scheduled {
            background: var(--purple);
        }

        .summary-icon.progress {
            background: var(--warning);
        }

        .summary-icon.completed {
            background: var(--success);
        }

        .summary-icon.cancelled {
            background: var(--danger);
        }

    .summary-content h3 {
        font-size: 24px;
        font-weight: 700;
        color: var(--gray-900);
        margin: 0 0 4px;
    }

    .summary-content .label {
        font-size: 14px;
        font-weight: 500;
        color: var(--gray-700);
        margin: 0 0 2px;
    }

    .summary-content .description {
        font-size: 13px;
        color: var(--gray-500);
        margin: 0;
    }

    /* Cards */
    .card-minimal {
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
        margin-bottom: 24px;
    }

    .card-header-minimal {
        padding: 20px 24px;
        background: var(--gray-50);
        border-bottom: 1px solid var(--gray-200);
    }

    .card-body-minimal {
        padding: 24px;
    }

    .card-title-minimal {
        font-size: 18px;
        font-weight: 600;
        color: var(--gray-900);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Buttons */
    .btn-minimal {
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 500;
        font-size: 14px;
        border: none;
        transition: all 0.15s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-primary-minimal {
        background: var(--primary);
        color: white;
    }

        .btn-primary-minimal:hover {
            background: var(--primary-light);
            color: white;
            transform: translateY(-1px);
        }

    /* Calendar Styling */
    .calendar-container {
        margin-bottom: 32px;
    }

    .fc {
        border: 1px solid var(--gray-200);
        border-radius: 12px;
        overflow: hidden;
    }

    .fc-header-toolbar {
        background: var(--gray-50);
        padding: 16px 20px;
        border-bottom: 1px solid var(--gray-200);
    }

    .fc-toolbar-title {
        color: var(--gray-900);
        font-weight: 600;
    }

    .fc-button-primary {
        background: var(--primary);
        border-color: var(--primary);
        border-radius: 6px;
    }

        .fc-button-primary:hover {
            background: var(--primary-light);
            border-color: var(--primary-light);
        }

    .fc-daygrid-day {
        border-color: var(--gray-200);
    }

    .fc-event {
        border-radius: 4px;
        border: none;
        font-size: 12px;
        font-weight: 500;
    }

        .fc-event.maintenance-scheduled {
            background: var(--purple);
        }

        .fc-event.maintenance-progress {
            background: var(--warning);
        }

        .fc-event.maintenance-completed {
            background: var(--success);
        }

    /* Maintenance Lists */
    .maintenance-item {
        padding: 16px;
        border: 1px solid var(--gray-200);
        border-radius: 8px;
        margin-bottom: 12px;
        transition: all 0.15s ease;
    }

        .maintenance-item:hover {
            background: var(--gray-50);
            border-color: var(--gray-300);
        }

    .maintenance-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 8px;
    }

    .maintenance-title {
        font-weight: 600;
        color: var(--gray-900);
        margin-bottom: 4px;
    }

    .maintenance-location {
        font-size: 13px;
        color: var(--gray-600);
        margin-bottom: 8px;
    }

    .maintenance-dates {
        font-size: 13px;
        color: var(--gray-500);
    }

    /* Status Badges */
    .badge-minimal {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 500;
        letter-spacing: 0.025em;
    }

    .badge-scheduled {
        background: #ede9fe;
        color: #6b21a8;
    }

    .badge-inprogress {
        background: #fef3c7;
        color: #92400e;
    }

    .badge-completed {
        background: #dcfce7;
        color: #166534;
    }

    .badge-cancelled {
        background: #fee2e2;
        color: #991b1b;
    }

    /* Category Badges */
    .category-badge {
        background: var(--gray-100);
        color: var(--gray-600);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 40px;
    }

    .empty-icon {
        width: 56px;
        height: 56px;
        background: var(--gray-100);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }

    .empty-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--gray-900);
        margin-bottom: 8px;
    }

    .empty-description {
        color: var(--gray-500);
        margin-bottom: 24px;
        font-size: 14px;
    }

    /* Actions */
    .maintenance-actions {
        display: flex;
        gap: 8px;
        margin-top: 12px;
    }

    .btn-ghost {
        background: transparent;
        color: var(--gray-500);
        border: none;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
    }

        .btn-ghost:hover {
            background: var(--gray-100);
            color: var(--gray-700);
        }

    /* View Toggle */
    .view-toggle {
        display: flex;
        gap: 8px;
        margin-bottom: 24px;
    }

    .view-btn {
        padding: 8px 16px;
        border: 1px solid var(--gray-300);
        background: white;
        color: var(--gray-600);
        border-radius: 6px;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.15s ease;
    }

        .view-btn.active,
        .view-btn:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-title {
            font-size: 24px;
        }

        .summary-grid {
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .maintenance-header {
            flex-direction: column;
            gap: 8px;
        }

        .view-toggle {
            justify-content: center;
        }
    }
</style>

<!-- Page Header -->
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Maintenance</h1>
        <p class="page-subtitle">Schedule and track maintenance activities</p>
    </div>
    <a asp-page="Create" class="btn-minimal btn-primary-minimal">
        <i class="fas fa-plus"></i>
        Schedule Maintenance
    </a>
</div>

<!-- Summary Cards -->
<div class="summary-grid">
    <div class="summary-card">
        <div class="summary-icon scheduled">
            <i class="fas fa-clock"></i>
        </div>
        <div class="summary-content">
            <h3>@Model.ScheduledCount</h3>
            <div class="label">Scheduled</div>
            <div class="description">Upcoming tasks</div>
        </div>
    </div>
    <div class="summary-card">
        <div class="summary-icon progress">
            <i class="fas fa-tools"></i>
        </div>
        <div class="summary-content">
            <h3>@Model.InProgressCount</h3>
            <div class="label">In Progress</div>
            <div class="description">Active work</div>
        </div>
    </div>
    <div class="summary-card">
        <div class="summary-icon completed">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="summary-content">
            <h3>@Model.CompletedCount</h3>
            <div class="label">Completed</div>
            <div class="description">This month</div>
        </div>
    </div>
    <div class="summary-card">
        <div class="summary-icon cancelled">
            <i class="fas fa-times-circle"></i>
        </div>
        <div class="summary-content">
            <h3>@Model.CancelledCount</h3>
            <div class="label">Cancelled</div>
            <div class="description">This month</div>
        </div>
    </div>
</div>

<!-- View Toggle -->
<div class="view-toggle">
    <button class="view-btn active" onclick="showCalendar()">
        <i class="fas fa-calendar-alt"></i>
        Calendar View
    </button>
    <button class="view-btn" onclick="showList()">
        <i class="fas fa-list"></i>
        List View
    </button>
</div>

<!-- Calendar View -->
<div id="calendarView" class="calendar-container">
    <div class="card-minimal">
        <div class="card-body-minimal">
            <div id="calendar"></div>
        </div>
    </div>
</div>

<!-- List View -->
<div id="listView" style="display: none;">
    <!-- Upcoming Maintenance -->
    @if (Model.UpcomingMaintenance.Any())
    {
        <div class="card-minimal">
            <div class="card-header-minimal">
                <h2 class="card-title-minimal">
                    <i class="fas fa-clock" style="color: var(--purple);"></i>
                    Upcoming Maintenance (@Model.UpcomingMaintenance.Count)
                </h2>
            </div>
            <div class="card-body-minimal">
                @foreach (var item in Model.UpcomingMaintenance)
                {
                    <div class="maintenance-item">
                        <div class="maintenance-header">
                            <div style="flex: 1;">
                                <div class="maintenance-title">@item.Description</div>
                                <div class="maintenance-location">
                                    @if (item.Room != null && item.Room.Apartment != null)
                                    {
                                        <i class="fas fa-door-open"></i>
                                        @item.Room.Apartment.Name
                                        -Room @item.Room.RoomNumber
                                                                }
                                    else if (item.Apartment != null)
                                    {
                                        <i class="fas fa-building"></i>
                                        @item.Apartment.Name
                                    }
                                </div>
                                <div class="maintenance-dates">
                                    @item.DateRange.StartDate.ToString("MMM dd") - @item.DateRange.EndDate.ToString("MMM dd, yyyy")
                                </div>
                            </div>
                            <div style="display: flex; flex-direction: column; gap: 8px; align-items: flex-end;">
                                <span class="badge-minimal badge-@(item.Status.ToString().ToLower())">@item.Status</span>
                                <span class="badge-minimal category-badge">@item.Category</span>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(item.Notes))
                        {
                            <div style="font-size: 13px; color: var(--gray-600); margin-top: 8px;">
                                @item.Notes
                            </div>
                        }
                        <div class="maintenance-actions">
                            <button class="btn-ghost" title="Start Work">
                                <i class="fas fa-play"></i>
                                Start
                            </button>
                            <button class="btn-ghost" title="Edit">
                                <i class="fas fa-edit"></i>
                                Edit
                            </button>
                            <button class="btn-ghost" title="Cancel" style="color: var(--danger);">
                                <i class="fas fa-times"></i>
                                Cancel
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Empty State for List View -->
    @if (!Model.UpcomingMaintenance.Any())
    {
        <div class="card-minimal">
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-tools" style="color: var(--gray-400); font-size: 20px;"></i>
                </div>
                <h3 class="empty-title">No maintenance scheduled</h3>
                <p class="empty-description">Get started by scheduling your first maintenance task.</p>
                <a asp-page="Create" class="btn-minimal btn-primary-minimal">
                    <i class="fas fa-plus"></i>
                    Schedule First Task
                </a>
            </div>
        </div>
    }
</div>

<!-- Include FullCalendar JS -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>

<script>
    let calendar;

    document.addEventListener('DOMContentLoaded', function() {
        initializeCalendar();
    });

    function initializeCalendar() {
        const calendarEl = document.getElementById('calendar');

        calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            height: 'auto',
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,listWeek'
            },
            events: [
                // Sample maintenance events - replace with actual data
                {
                    title: 'Apartment A - Plumbing',
                    start: '2025-07-15',
                    end: '2025-07-16',
                    className: 'maintenance-scheduled',
                    extendedProps: {
                        category: 'Plumbing',
                        status: 'Scheduled'
                    }
                },
                {
                    title: 'Room 101 - Electrical',
                    start: '2025-07-18',
                    className: 'maintenance-progress',
                    extendedProps: {
                        category: 'Electrical',
                        status: 'InProgress'
                    }
                }
            ],
            eventClick: function(info) {
                // Handle event click - show details, edit, etc.
                alert('Maintenance: ' + info.event.title);
            }
        });

        calendar.render();
    }

    function showCalendar() {
        document.getElementById('calendarView').style.display = 'block';
        document.getElementById('listView').style.display = 'none';

        // Update button states
        document.querySelectorAll('.view-btn').forEach(btn => btn.classList.remove('active'));
        document.querySelectorAll('.view-btn')[0].classList.add('active');

        // Refresh calendar
        if (calendar) {
            calendar.updateSize();
        }
    }

    function showList() {
        document.getElementById('calendarView').style.display = 'none';
        document.getElementById('listView').style.display = 'block';

        // Update button states
        document.querySelectorAll('.view-btn').forEach(btn => btn.classList.remove('active'));
        document.querySelectorAll('.view-btn')[1].classList.add('active');
    }
</script>