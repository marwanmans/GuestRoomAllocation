@page
@model GuestRoomAllocation.Web.Pages.Maintenance.CreateModel
@{
    ViewData["Title"] = "Schedule Maintenance";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">
                    <i class="fas fa-plus me-2 text-success"></i>Schedule Maintenance
                </h1>
                <p class="text-muted">Plan maintenance activities for apartments and rooms</p>
            </div>
            <div>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Maintenance
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tools me-2 text-primary"></i>Maintenance Details
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Target Selection -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-target me-2 text-info"></i>Maintenance Target
                        </h6>
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Command.TargetType" id="targetApartment" value="Apartment" checked>
                                    <label class="form-check-label" for="targetApartment">
                                        <i class="fas fa-building me-1"></i>Entire Apartment
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Command.TargetType" id="targetRoom" value="Room">
                                    <label class="form-check-label" for="targetRoom">
                                        <i class="fas fa-door-open me-1"></i>Specific Room
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Apartment Selection -->
                    <div class="mb-4" id="apartmentSelection">
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Command.ApartmentId" class="form-label">Select Apartment</label>
                                <select asp-for="Command.ApartmentId" asp-items="Model.ApartmentOptions" class="form-select">
                                    <option value="">-- Choose an apartment --</option>
                                </select>
                                <span asp-validation-for="Command.ApartmentId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Room Selection (Hidden by default) -->
                    <div class="mb-4" id="roomSelection" style="display: none;">
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Command.RoomId" class="form-label">Select Room</label>
                                <select asp-for="Command.RoomId" class="form-select">
                                    <option value="">-- Choose a room --</option>
                                </select>
                                <span asp-validation-for="Command.RoomId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Category and Description -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-info-circle me-2 text-primary"></i>Maintenance Information
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.Category" class="form-label">Category</label>
                                <select asp-for="Command.Category" asp-items="Model.CategoryOptions" class="form-select">
                                    <option value="">-- Select category --</option>
                                </select>
                                <span asp-validation-for="Command.Category" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.Priority" class="form-label">Priority</label>
                                <select asp-for="Command.Priority" class="form-select">
                                    <option value="Low">Low</option>
                                    <option value="Medium" selected>Medium</option>
                                    <option value="High">High</option>
                                    <option value="Urgent">Urgent</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label asp-for="Command.Description" class="form-label">Description</label>
                                <textarea asp-for="Command.Description" class="form-control" rows="3" placeholder="Describe the maintenance work needed..."></textarea>
                                <span asp-validation-for="Command.Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Schedule -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-calendar-alt me-2 text-warning"></i>Schedule
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.StartDate" class="form-label">Start Date</label>
                                <input asp-for="Command.StartDate" type="date" class="form-control" />
                                <span asp-validation-for="Command.StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.EndDate" class="form-label">End Date</label>
                                <input asp-for="Command.EndDate" type="date" class="form-control" />
                                <span asp-validation-for="Command.EndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Notes -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-edit me-2 text-success"></i>Additional Information
                        </h6>
                        <div class="mb-3">
                            <label asp-for="Command.Notes" class="form-label">Notes (Optional)</label>
                            <textarea asp-for="Command.Notes" class="form-control" rows="3" placeholder="Any additional notes or special instructions..."></textarea>
                            <span asp-validation-for="Command.Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Schedule Maintenance
                        </button>
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-lightbulb me-2 text-warning"></i>Maintenance Categories
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Common Categories:</strong>
                    <ul class="mt-1 mb-0 small">
                        <li><strong>Cleaning:</strong> Regular cleaning, deep cleaning</li>
                        <li><strong>Repairs:</strong> Fix broken items, replace parts</li>
                        <li><strong>Inspection:</strong> Safety, compliance checks</li>
                        <li><strong>Renovation:</strong> Upgrades, improvements</li>
                        <li><strong>Plumbing:</strong> Pipes, fixtures, drainage</li>
                        <li><strong>Electrical:</strong> Wiring, outlets, lighting</li>
                    </ul>
                </div>
                <div>
                    <strong>Priority Levels:</strong>
                    <ul class="mt-1 mb-0 small">
                        <li><strong>Urgent:</strong> Safety issues, immediate attention</li>
                        <li><strong>High:</strong> Important, schedule within days</li>
                        <li><strong>Medium:</strong> Standard maintenance</li>
                        <li><strong>Low:</strong> When convenient</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm mt-3">
            <div class="card-header bg-transparent border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-link me-2 text-info"></i>Quick Links
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-page="/Apartments/Index" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-building me-2"></i>View Apartments
                    </a>
                    <a asp-page="/Rooms/Index" class="btn btn-sm btn-outline-info">
                        <i class="fas fa-door-open me-2"></i>View Rooms
                    </a>
                    <a asp-page="Index" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-calendar me-2"></i>Maintenance Calendar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const apartmentRadio = document.getElementById('targetApartment');
        const roomRadio = document.getElementById('targetRoom');
        const apartmentSelection = document.getElementById('apartmentSelection');
        const roomSelection = document.getElementById('roomSelection');
        const apartmentSelect = document.querySelector('select[name="Command.ApartmentId"]');
        const roomSelect = document.querySelector('select[name="Command.RoomId"]');

        // Handle target type changes
        function handleTargetTypeChange() {
            if (apartmentRadio.checked) {
                apartmentSelection.style.display = 'block';
                roomSelection.style.display = 'none';
                roomSelect.value = '';
            } else {
                apartmentSelection.style.display = 'block';
                roomSelection.style.display = 'block';
            }
        }

        apartmentRadio.addEventListener('change', handleTargetTypeChange);
        roomRadio.addEventListener('change', handleTargetTypeChange);

        // Load rooms when apartment is selected
        apartmentSelect.addEventListener('change', async function() {
            const apartmentId = this.value;
            roomSelect.innerHTML = '<option value="">-- Choose a room --</option>';

            if (apartmentId && roomRadio.checked) {
                try {
                    const response = await fetch(`/api/apartments/${apartmentId}/rooms`);
                    if (response.ok) {
                        const rooms = await response.json();
                        rooms.forEach(room => {
                            const option = document.createElement('option');
                            option.value = room.id;
                            option.textContent = `Room ${room.roomNumber}`;
                            roomSelect.appendChild(option);
                        });
                    }
                } catch (error) {
                    console.error('Error loading rooms:', error);
                }
            }
        });

        // Set default dates
        const today = new Date();
        const tomorrow = new Date(today);
        tomorrow.setDate(tomorrow.getDate() + 1);

        document.querySelector('input[name="Command.StartDate"]').value = today.toISOString().split('T')[0];
        document.querySelector('input[name="Command.EndDate"]').value = tomorrow.toISOString().split('T')[0];
    });
</script>