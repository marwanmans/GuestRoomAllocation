@page
@model GuestRoomAllocation.Web.Pages.Guests.CreateModel
@{
    ViewData["Title"] = "Create Guest";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1 class="h2 mb-4">Create Guest</h1>

            <form method="post">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Command.FirstName" class="form-label"></label>
                                    <input asp-for="Command.FirstName" class="form-control" />
                                    <span asp-validation-for="Command.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Command.LastName" class="form-label"></label>
                                    <input asp-for="Command.LastName" class="form-control" />
                                    <span asp-validation-for="Command.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Command.Email" class="form-label"></label>
                                    <input asp-for="Command.Email" type="email" class="form-control" />
                                    <span asp-validation-for="Command.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Command.Phone" class="form-label"></label>
                                    <input asp-for="Command.Phone" class="form-control" />
                                    <span asp-validation-for="Command.Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Command.JobPosition" class="form-label"></label>
                            <input asp-for="Command.JobPosition" class="form-control" />
                            <span asp-validation-for="Command.JobPosition" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Command.Notes" class="form-label"></label>
                            <textarea asp-for="Command.Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Command.Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Create Guest</button>
                    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}