@page
@model CreateGuestModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@{
    ViewData["Title"] = "Add New Guest";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Guest Information</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Guest.FirstName" class="form-label">First Name *</label>
                                <input asp-for="Guest.FirstName" class="form-control" required />
                                <span asp-validation-for="Guest.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Guest.LastName" class="form-label">Last Name *</label>
                                <input asp-for="Guest.LastName" class="form-control" required />
                                <span asp-validation-for="Guest.LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Guest.Email" class="form-label">Email *</label>
                                <input asp-for="Guest.Email" type="email" class="form-control" required />
                                <span asp-validation-for="Guest.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Guest.Phone" class="form-label">Phone *</label>
                                <input asp-for="Guest.Phone" type="tel" class="form-control" required />
                                <span asp-validation-for="Guest.Phone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Guest.JobPosition" class="form-label">Job Position</label>
                        <input asp-for="Guest.JobPosition" class="form-control" />
                        <span asp-validation-for="Guest.JobPosition" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Guest.Notes" class="form-label">Notes</label>
                        <textarea asp-for="Guest.Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Guest.Notes" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Guests" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Guests
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save Guest
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-info-circle"></i> Information</h6>
            </div>
            <div class="card-body">
                <p><strong>Required Fields:</strong></p>
                <ul>
                    <li>First Name</li>
                    <li>Last Name</li>
                    <li>Email (must be unique)</li>
                    <li>Phone Number</li>
                </ul>
                <p><strong>Optional Fields:</strong></p>
                <ul>
                    <li>Job Position</li>
                    <li>Notes</li>
                </ul>
                <hr>
                <p><small class="text-muted">After creating the guest, you can allocate them to a room from the Allocations page.</small></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}