@page "{id:int}"
@model DeleteGuestModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@{
    ViewData["Title"] = "Delete Guest";
}

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5><i class="fas fa-exclamation-triangle"></i> Delete Guest</h5>
            </div>
            <div class="card-body">
                <p class="lead">Are you sure you want to delete this guest?</p>

                <div class="row">
                    <div class="col-md-6">
                        <h6>Guest Information:</h6>
                        <ul class="list-unstyled">
                            <li><strong>Name:</strong> @Model.Guest.FullName</li>
                            <li><strong>Email:</strong> @Model.Guest.Email</li>
                            <li><strong>Phone:</strong> @Model.Guest.Phone</li>
                            @if (!string.IsNullOrEmpty(Model.Guest.JobPosition))
                            {
                                <li><strong>Job Position:</strong> @Model.Guest.JobPosition</li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Impact:</h6>
                        <ul class="list-unstyled">
                            <li><strong>Total Allocations:</strong> @Model.AllocationCount</li>
                            <li><strong>Current Allocations:</strong> @Model.CurrentAllocationCount</li>
                            <li><strong>Future Allocations:</strong> @Model.FutureAllocationCount</li>
                        </ul>
                    </div>
                </div>

                @if (Model.CurrentAllocationCount > 0 || Model.FutureAllocationCount > 0)
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> This guest has active or future allocations.
                        Deleting this guest will also remove all their allocations.
                    </div>
                }

                <form method="post" class="d-inline">
                    <input type="hidden" asp-for="Guest.Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <a href="/Guests" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you absolutely sure you want to delete this guest and all their allocations?')">
                            <i class="fas fa-trash"></i> Delete Guest
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        @if (Model.RecentAllocations.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h6><i class="fas fa-history"></i> Recent Allocations</h6>
                </div>
                <div class="card-body">
                    @foreach (var allocation in Model.RecentAllocations)
                    {
                        <div class="mb-2 p-2 border rounded">
                            <strong>@allocation.Room.Apartment.Name - @allocation.Room.RoomNumber</strong>
                            <br>
                            <small class="text-muted">
                                @allocation.CheckInDate.ToString("MMM dd, yyyy") -
                                @allocation.CheckOutDate.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>