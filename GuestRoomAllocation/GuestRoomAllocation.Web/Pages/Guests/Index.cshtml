@page
@model GuestRoomAllocation.Web.Pages.Guests.IndexModel
@{
    ViewData["Title"] = "Guests";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">
                    <i class="fas fa-users me-2 text-primary"></i>Guest Management
                </h1>
                <p class="text-muted">Manage guest information and contacts</p>
            </div>
            <div>
                <a asp-page="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Guest
                </a>
            </div>
        </div>
    </div>
</div>

@if (Model.Guests.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Job Position</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var guest in Model.Guests)
                        {
                            <tr>
                                <td>
                                    <span class="fw-bold">@guest.FirstName @guest.LastName</span>
                                </td>
                                <td>
                                    <span class="text-muted">@guest.ContactInfo.Email</span>
                                </td>
                                <td>
                                    <span class="text-muted">@guest.ContactInfo.Phone</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(guest.JobPosition))
                                    {
                                        <span class="badge bg-secondary">@guest.JobPosition</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@guest.CreatedDate.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="#" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-users text-muted" style="font-size: 4rem;"></i>
        </div>
        <h4 class="text-muted mb-3">No Guests Found</h4>
        <p class="text-muted mb-4">Get started by adding your first guest to the system.</p>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add First Guest
        </a>
    </div>
}