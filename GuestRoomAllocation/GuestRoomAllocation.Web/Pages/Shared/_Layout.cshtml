<!-- Pages/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Guest Room Allocation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
        }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 1px;
            background-color: #dee2e6;
        }

        .calendar-cell {
            background-color: white;
            min-height: 100px;
            padding: 5px;
            border: 1px solid #e9ecef;
        }

        .allocation-block {
            background-color: #007bff;
            color: white;
            padding: 2px 5px;
            margin: 1px 0;
            border-radius: 3px;
            font-size: 0.8em;
        }

        .maintenance-block {
            background-color: #dc3545;
            color: white;
            padding: 2px 5px;
            margin: 1px 0;
            border-radius: 3px;
            font-size: 0.8em;
        }

        .user-info {
            background-color: #e9ecef;
            border-radius: 8px;
            padding: 8px;
            margin-bottom: 10px;
        }

        .role-badge {
            font-size: 0.7em;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <h5 class="px-3 text-muted">Guest Room Allocation</h5>

                    <!-- User Info -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="user-info mx-3 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user-circle fa-2x me-2"></i>
                                <div>
                                    <div class="fw-bold">@User.FindFirst("FullName")?.Value</div>
                                    <small class="text-muted">@User.FindFirst(ClaimTypes.Email)?.Value</small>
                                    <div>
                                        <span class="badge @(User.IsInRole("Admin") ? "bg-danger" : "bg-primary") role-badge">
                                            @User.FindFirst(ClaimTypes.Role)?.Value
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Apartments">
                                    <i class="fas fa-building"></i> Apartments
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" href="/Guests">
                                <i class="fas fa-users"></i> Guests
                                @if (!User.IsInRole("Admin"))
                                {
                                    <small class="text-muted">(Assigned)</small>
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Rooms">
                                <i class="fas fa-bed"></i> Rooms
                                @if (!User.IsInRole("Admin"))
                                {
                                    <small class="text-muted">(Assigned)</small>
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Allocations">
                                <i class="fas fa-calendar-alt"></i> Allocations
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Maintenance">
                                <i class="fas fa-tools"></i> Maintenance
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <hr>
                            <li class="nav-item">
                                <span class="nav-link text-muted fw-bold">
                                    <i class="fas fa-cog"></i> Administration
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link ps-4" href="/Admin/Users">
                                    <i class="fas fa-users-cog"></i> User Management
                                </a>
                            </li>
                        }

                        <hr>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/Logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        @RenderSection("HeaderActions", required: false)
                    </div>
                </div>

                <!-- Alert Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["WarningMessage"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> @TempData["WarningMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["InfoMessage"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="fas fa-info-circle"></i> @TempData["InfoMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>